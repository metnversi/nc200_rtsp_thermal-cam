        </Run>
          </TextBlock>
        </StackPanel>
      </TabItem>
      
      <TabItem>
        <TabItem.Header>
          <StackPanel
          Width="auto"
          Height="auto">
            <materialDesign:PackIcon
            Width="24"
            Height="24"
            HorizontalAlignment="Center"
            Kind="Images" />
          </StackPanel>
        </TabItem.Header>
        <StackPanel
        Margin="16">
          <TextBlock
          Margin="0,0,0,8"
          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
          Text="Photos" />
