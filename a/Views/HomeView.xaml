<UserControl x:Class="a.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:a.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:HomeViewModel, IsDesignTimeCreatable=False}"
             xmlns:local="clr-namespace:a.Views" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="344" d:DesignWidth="800"
             Background="LightGray">
  <DockPanel LastChildFill="True" >
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="40"/>
        <RowDefinition Height="65*" />
        <RowDefinition Height="67*" />
        <RowDefinition Height="67*" />
        <RowDefinition Height="67*" />
        <RowDefinition Height="40*" />
        <RowDefinition  />
      </Grid.RowDefinitions>
      <!--<StackPanel Background="Black" Grid.Row="0" Grid.Column="0" 
                Grid.RowSpan="3" Grid.ColumnSpan="3"
                DockPanel.Dock="Left" Margin="10">
        <Button Command="{Binding AddPanelCommand}" Width="72" />
                
      </StackPanel>-->
      <Button Command="{Binding ShowCommand}" 
              Background="#005BAA" Margin="5"/>

      <ItemsControl Grid.Row="1" Grid.Column="0" 
                  Grid.RowSpan="6" Grid.ColumnSpan="12" 
                  ItemsSource="{Binding Panels}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemContainerStyle>
          <Style TargetType="local:CamView">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
          </Style>
        </ItemsControl.ItemContainerStyle>
    </ItemsControl>
    </Grid>
  </DockPanel>
</UserControl>
