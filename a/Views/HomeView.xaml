<UserControl x:Class="a.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:a.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:HomeViewModel, IsDesignTimeCreatable=False}"
             xmlns:local="clr-namespace:a.Views" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:model="clr-namespace:a.Models"
             mc:Ignorable="d" 
             d:DesignHeight="344" d:DesignWidth="800"
             Background="Black">
  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <model:DivideByThreeConverter x:Key="DivideByThreeConverter" />
  </UserControl.Resources>
  <DockPanel LastChildFill="True" >
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="40"/>
        <RowDefinition Height="65*" />
        <RowDefinition Height="67*" />
        <RowDefinition Height="67*" />
        <RowDefinition Height="67*" />
        <RowDefinition Height="40*" />
        <RowDefinition  />
      </Grid.RowDefinitions>
      
      <Button Command="{Binding ShowCommand}" 
              Background="#005BAA" Margin="5"
              Height="30" Content="Add" Foreground="White"/>

      <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.RowSpan="6" Grid.ColumnSpan="12" Margin="10">
        <ItemsControl ItemsSource="{Binding Panels}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <UniformGrid Columns="4" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemContainerStyle>
            <Style TargetType="local:CamView">
              <Setter Property="HorizontalAlignment" Value="Stretch"/>
              <Setter Property="Height" Value="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ItemsControl}, Converter={StaticResource DivideByThreeConverter}}" />
            </Style>
          </ItemsControl.ItemContainerStyle>
        </ItemsControl>
      </ScrollViewer>
      <ContentControl Grid.Row="1" Grid.RowSpan="4" 
                      Grid.Column="3" Grid.ColumnSpan="3"
                      Margin="15,0,15,0"
                      Content="{Binding ConnectView}" 
                      Visibility="{Binding IsConnectViewOpen, Converter={StaticResource BooleanToVisibilityConverter}}" />
      <!--<local:ConnectView Grid.Row="1" Grid.RowSpan="4" 
                         Grid.Column="3" Grid.ColumnSpan="3"
                         Margin="10,0,10,0"
                         Visibility="{Binding IsConnectViewOpen, Converter={StaticResource BooleanToVisibilityConverter}}" />-->
    </Grid>
  </DockPanel>
</UserControl>
